@model Entities.clsMision

@{
    ViewData["Title"] = "Details";
}
<img src="https://upload.wikimedia.org/wikipedia/commons/c/cb/Logo-imperio-gal%C3%A1ctico.png" width="100" height="100" style="float:right"/>
<h1>Misión del imperio: @Html.DisplayFor(model => model.NombreMision)</h1>

<div>
    <h4>Detalles</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ID de la misión
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Nombre de la misión
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreMision)
        </dd>
        <dt class = "col-sm-2">
            Detalles de la misión
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DetallesMision)
        </dd>
        <dt class = "col-sm-2">
            Créditos obtenidos por realizar la misión
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Creditos)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="ListaMisiones">Volver a la lista de misiones</a>
</div>
